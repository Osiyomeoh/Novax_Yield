# TrustBridge Frontend Environment Variables
# Copy this file to .env and update with your values

# API Configuration
VITE_API_URL=https://trustbridge-africa.onrender.com/api
VITE_SERVER_URL=https://trustbridge-africa.onrender.com

# Pinata IPFS Configuration
VITE_PINATA_GATEWAY_URL=gateway.pinata.cloud
VITE_PINATA_JWT=your_pinata_jwt_token_here

# WalletConnect Configuration
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Google AI Studio Configuration
VITE_GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Story Protocol Configuration (for IP Registration)
VITE_STORY_PROTOCOL_CHAIN=sepolia
VITE_STORY_PROTOCOL_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
VITE_STORY_PROTOCOL_API_KEY=your_story_protocol_api_key
VITE_STORY_PROTOCOL_CONTRACT_ADDRESS=0x...

# Sepolia Network (for Story Protocol)
VITE_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
VITE_SEPOLIA_CHAIN_ID=11155111

# Mantle Network Configuration
