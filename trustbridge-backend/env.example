# Novax Yield Backend Environment Variables
# Copy this file to .env and update with your values

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/novax-yield

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=4001
FRONTEND_URL=http://localhost:3001

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# BLOCKCHAIN (Arbitrum Sepolia)
# ============================================
# Arbitrum Sepolia RPC URL
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_CHAIN_ID=421614

# Contract Addresses (deployed to Arbitrum Sepolia - Feb 18, 2026)
# MockUSDC on Arbitrum Sepolia
USDC_ADDRESS=0xD1A4AB603d489F6A6D74e7A5E853ad880cB7C24D
# Novax contracts
NVX_TOKEN_ADDRESS=0x9fF0637bCEEb4263DcA3ECdc00380E7C5077C8ff
RWA_FACTORY_ADDRESS=0x83E58aaa63B9437ec39985Eb913CABA27f85A442
RECEIVABLE_FACTORY_ADDRESS=0xEbf84CE8945B7e1BE6dBfB6914320222Cf05467b
POOL_MANAGER_ADDRESS=0x31838f29811Fdb9822C0b7d56c290ccF358f0cb5

# Deployer Private Key (for contract interactions - KEEP SECRET!)
# Use ARBITRUM_PRIVATE_KEY for Arbitrum-specific deployments
ARBITRUM_PRIVATE_KEY=your_arbitrum_private_key_here
# Fallback to generic PRIVATE_KEY if ARBITRUM_PRIVATE_KEY not set
PRIVATE_KEY=your_private_key_here

# ============================================
# IPFS (Pinata)
# ============================================
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token
PINATA_GATEWAY_URL=gateway.pinata.cloud

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
# Option 1: Resend (Recommended for cloud platforms like Render)
RESEND_API_KEY=your_resend_api_key

# Option 2: Gmail (for local development)
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Option 3: cPanel SMTP (if available)
CPANEL_SMTP_HOST=smtp.yourdomain.com
CPANEL_SMTP_PORT=587
CPANEL_SMTP_USER=your_smtp_user
CPANEL_SMTP_PASSWORD=your_smtp_password
CPANEL_SMTP_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# PAYMENTS (Optional - for Stripe integration)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# NOTIFICATIONS (Optional)
# ============================================
# SMS - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# SMS - Africa's Talking
AT_USERNAME=your_at_username
AT_API_KEY=your_at_api_key
AT_SENDER_ID=your_sender_id

# ============================================
# EXTERNAL APIs (Optional)
# ============================================
# Chainlink / Price Feeds
OPENWEATHER_API_KEY=your_openweather_api_key
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key

# ============================================
# DEPLOYMENT (Render, Railway, etc.)
# ============================================
# Render automatically sets these:
# RENDER=true
# RENDER_EXTERNAL_URL=https://your-app.onrender.com


